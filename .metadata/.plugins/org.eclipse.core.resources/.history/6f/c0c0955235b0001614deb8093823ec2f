package servlet;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.json.simple.JSONArray;
import org.json.simple.JSONObject;

import classes.Channel;
import classes.Song;
import server.ChannelManager;
import sql.ChannelDataManager;

@WebServlet("/channel")
public class ChannelServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public ChannelServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
    	String channelId = request.getParameter("id");
		response.setContentType("application/json");
		PrintWriter out = response.getWriter();  
		
		if (channelId == null) {
			JSONObject obj = new JSONObject();
			obj.put("error", "No id specified");
			out.print(obj.toString());
			out.flush();
			return;
		}
		
		if (!ChannelManager.exists(channelId)) {
			JSONObject obj = new JSONObject();
			obj.put("error", "channel does not exist");
			out.print(obj.toString());
			out.flush();
			return;
		}
		
		/*
	      {
	        id: string
	        name: string,
	        favorite: bool,
	        currentTrackURI: string,
	        currentTrackTime: number,
	        currentTrackDuration: number
	      }
	    */
//		String channelName = MainServer.channelIDToChannelMap.get(clientID).getChannelName();
//		ArrayList<String> sup = MainServer.channelIDToChannelMap.get(clientID).getSongURIPlaylist();
		
		Channel ch = ChannelManager.getChannel(channelId);
		
		JSONObject obj = new JSONObject();
		
		obj.put("id", ch.clientId);
		obj.put("name", ch.channelName);
		obj.put("favorite", false);
		
		obj.put("currentTrackURI", ch.currentSongURI);
		obj.put("currentTrackTime", ch.currentTime);
		obj.put("currentTrackDuration", ch.duration);
		
		JSONArray songQueue = new JSONArray();
		for (Song s : ch.songQueue) {
			songQueue.add(s);
		}
    	
    	obj.put("upNext", songQueue);
		
		out.print(obj.toString());
		out.flush();
	}

